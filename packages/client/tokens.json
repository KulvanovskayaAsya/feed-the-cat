  "color-background": "#F0D8C8",
  "color-light": "#FFF",
  "color-gray": "rgba(14, 14, 14, 0.5)",
  "font-family": "VT323, monospace",
  "font-header": "100px",
  "font-header-line-height": "116px",
  "font-button": "64px",
  "font-h2": "36px",
